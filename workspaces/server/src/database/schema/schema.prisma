datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Artist {
    id    Int             @unique
    users ArtistsOnUser[]
}

model Label {
    id    Int            @unique
    users LabelsOnUser[]
}

model User {
    id      Int             @id @default(autoincrement())
    email   String          @unique
    name    String?
    artists ArtistsOnUser[]
    labels  LabelsOnUser[]
}

model ArtistsOnUser {
    user     User   @relation(fields: [userId], references: [id])
    userId   Int
    artist   Artist @relation(fields: [artistId], references: [id])
    artistId Int

    @@id([userId, artistId])
}

model LabelsOnUser {
    user    User  @relation(fields: [userId], references: [id])
    userId  Int
    label   Label @relation(fields: [labelId], references: [id])
    labelId Int

    @@id([userId, labelId])
}
